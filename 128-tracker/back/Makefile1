SHELL=cmd

OS_RM    = del 
.SUFFIXES:


TARGET   = test1.abs
TARGETD  = test1d.abs

CC       = nmc-g++
AS       = nmc-gcc
CXXFLAGS =  -O2 -Wall -mnmc4-fixed -g -std=c99 -fpermissive
CXXFLAGSD=  -O0 -Wall -mnmc4-fixed -g -std=c99 -fpermissive
LIBS     =  -lhal_mc12101  -lnm6407int -lnmpp-nm6407i -lm   -ldtp-nm -lhal_mc12101 -ldtp-nm -lhal_mc12101 -Wl,--whole-archive -lnm6407_io_nmc -lmc12101load_nm -Wl,--no-whole-archive 
LIBSD    =  -lhal_mc12101 -lnm6407int -lnmpp-nm6407i -lm    -ldtp-nm -lhal_mc12101 -ldtp-nm -lhal_mc12101 -Wl,--whole-archive -lnm6407_io_nmc -lmc12101load_nm -lmc12101_stub_nmc4_fixed -Wl,--no-whole-archive 
LDFLAGS  = -Wl,-Map=test1.map  -Wl,-Tmc12101-nmpu1.lds
LDFLAGSD = -Wl,-Map=test1d.map -Wl,-Tmc12101-nmpu1.lds 
INC_DIRS = -I"$(MC12101)/include" -I../../../include -I.. -I$(DTP)/include -I$(NMPP)/include -I$(HAL)/include  -I$(VSHELL)/include
LIB_DIRS = -L"$(MC12101)/lib"  -L$(DTP)/lib -L$(NMPP)/lib  -L$(HAL)/lib
SOURCES  = ../../back/main1.cpp ../../back/vsimg.cpp

.DEFAULT_GOAL := all

all: $(TARGET) $(TARGETD)

$(TARGET): $(SOURCES) Makefile mc12101-nmpu1.lds 
	@echo ------ build release --------------
	$(CC)  -o$(TARGET) $(CXXFLAGS) $(LDFLAGS)  $(INC_DIRS) $(LIB_DIRS)  $(SOURCES) $(LIBS) $(ERRECHO)
	nmc-objdump -D $(TARGET) > dasm1.txt

$(TARGETD): $(SOURCES) Makefile mc12101-nmpu1.lds
	@echo ------ build debug ----------------
	$(CC)  -o$(TARGETD) $(CXXFLAGSD) $(LDFLAGSD) $(INC_DIRS) $(LIB_DIRS) $(SOURCES) $(LIBSD) $(ERRECHO)
	nmc-objdump -D $(TARGETD) > dasm1d.txt


run:  $(TARGET) 
	mc12101run -p -a1 -v $(TARGET) 

rund: $(TARGETD)
	mc12101run -p -R -a1 -v $(TARGETD) 

monitor:
	mc12101_gdb_monitor 0 0 5555
	
gdb:
	nmc-gdb -ex "target remote :5555" $(TARGETD)


clean: 
	-$(OS_RM) *.abs *.elf *.map *.txt
	

